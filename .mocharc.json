{
    "require": "ts-node/register",
    "extensions": [
        "ts",
        "tsx"
    ],
    "spec": [
        "tests/**/*.test.ts"
    ],
    "watch-files": [
        "src",
        "tests"
    ],
    "node-option": [
        "experimental-specifier-resolution=node",
        "loader=ts-node/esm"
    ]
}